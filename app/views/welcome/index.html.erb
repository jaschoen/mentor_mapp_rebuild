<!-- First Image and background text  -->
<div class="container ">
    <!--<div class="front_image">-->
      <!--<%#= image_tag("cover_image.jpg", alt: "Cover Image", class: "img-responsive") %>-->
    <!--</div>-->
  <div class="alert alert-warning front_text">
    #1 platform for mapping lifelong learners to unique mentoring and coaching solutions.
  </div>
    <br>

    <!-- start deploy mentor working form  -->
    <div class="searchbar">
      <div class="row pull-right-sm">
        <%= simple_form_for @demo do |f| %>
        <div class="form-inputs">
          <div class="col-sm-3">
            <div class="input-group input-group-lg">
              <span class="input-group-addon" id="sizing-addon2">@</span>
              <%= f.text_field :email, placeholder: "Email", id:"text_email",class: 'form-control', required: true %>
            </div>
          </div>

          <div class="col-sm-3">
            <div class="input-group input-group-lg">
              <span class="input-group-addon" id="sizing-addon2">&#9825;</span>
            <%= f.select( :industry, Category_drop_array, { prompt: 'Select Category'}, class: 'form-control' ,id: 'mySelect') %>
          </div>
          </div>

          <div class="col-sm-3">
            <div class="input-group input-group-lg">
              <span class="input-group-addon" id="sizing-addon2"><i class="glyphicon glyphicon-map-marker"></i></span>
              <%= f.select( :location, Country_drop_down_array, { :prompt => 'Select Country'}, class: 'form-control' ,id: 'mySelect') %>
          </div>
          </div>

        </div>
        <div class="form-actions">
          <div class="col-sm-3">
          <div>
            <%= button_tag( type: 'submit', class: "btn btn-primary form-control" , id: "btn_sub" ) do %>
            <span>Request A Demo <br>Free 30 Min Mentoring</span>
            <% end %>
          </div>
          </div>

        </div>
        <% end %>
      </div>
    </div>
    <!-- end form -->
</div>


<!-- What is mentormapp -->
<br>
<div class="container mentormapp">
  <div class="row">
    <div class="def_mentormapp">
      <div class="col-sm-4">
        <h1 class="what_mentor_mapp">
           What is
          <br>
          <span>MentorMapp?</span>
        </h1>
      </div>
      <div class="col-sm-8">
        <p class="info" id="info">
          MentorMapp is a safe, efficient, affordable way to match coaches with people (and companies) seeking mentoring and coaching. You can use MentorMapp to get access to, engage with, connect with, and collaborate with a community of mentors and coaches who are experts in leadership, management, and wellbeing. Participants can share their experiences with the community in total confidentiality.
        </p>
      </div>
    </div>
  </div>
</div>

<!-- Testimonials start here -->
<div class="container">
  <div class="testimonials_animated">
    <div class="row">
      <div class="col-sm-12">
        <div id="secondCarousel" class="carousel slide" data-ride="carousel">
