<div class="events_form">
  <%= simple_form_for(@event) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :event_date %>
      <%= f.input :event_time %>
      <%= f.input :mentor %>    
      <%= f.input :location %>
      <%= f.input :description %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>