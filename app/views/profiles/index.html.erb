<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

<table>
  <thead>
    <tr>
      <!-- <th>Mentor Email</th> -->
      <th>First name</th>
      <th>Last name</th>
      <th>City</th>
      <th>State</th>
      <th>Bio</th>
      <th>Coach type</th>
      <th>Rating</th>
      <th>Price low</th>
      <th>Price high</th>
      <th>Language</th>
      <th>Certification</th>
      <th>Skills</th>
      <th>Experience</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.city %></td>
        <td><%= profile.state %></td>
        <td><%= profile.bio %></td>
        <td><%= profile.coach_type %></td>
        <td><%= profile.rating %></td>
        <td><%= profile.price_low %></td>
        <td><%= profile.price_high %></td>
        <td><%= profile.language %></td>
        <td><%= profile.certification %></td>
        <td><%= profile.skills %></td>
        <td><%= profile.experience %></td>
        <td><%= profile.email %></td>
        <td><%= link_to 'Show', profile %></td>
        <% if can? :edit, profile %>
          <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
          <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

