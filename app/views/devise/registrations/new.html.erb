<div class="container" id="contact_us_container">
  <h1 id="page_title"></h1>
  <div class="row">
    <div class="col-sm-offset-2 col-sm-8">
      <div class="col-sm-offset-3 col-sm-6" id="sing_up">
        <h2>Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true %>
              <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
              <%= f.input :password_confirmation, required: true %>
            </div>
            <div class="checkbox">
              <label>
                <input id="login-remember" type="checkbox" name="remember" value="1"> I agree to MentorMapp's Website Terms, Privacy Policy
                User Agreement and to receive emails that i can opt out of any time.
              </label>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Sign up" %>
            </div>
        <% end %>
        <br><br>
        <%#= render "devise/shared/links" %>
      </div>
      <%= image_tag("landing-image.jpg", :alt => "Many Portraits", class: "img-responsive") %>
    </div>
  </div>
</div>